<%= render partial: 'challenges/header', cache: true %>

<% if @challenge.stage_number == 4 %>
  <div id="solution_stage-carousel" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <% @solution_stories.first(3).each_with_index do |solution_story, index| %>
        <li data-target="#solution_stage-carousel" data-slide-to="<%= index %>" class="<%= index.zero? ? 'active' : '' %>"></li>
      <% end %>
    </ol>
    
    <div class="carousel-inner" role="listbox">
      <% @solution_stories.first(3).each_with_index do |solution_story, index| %>
        <div class='item <%= index.zero? ? 'active' : '' %>'>
          <div class='opacity-layer'>
            <%= image_tag(solution_story.image.url, style: 'width: 100%; max-height: 400px') %>
          </div>
          <div class="carousel-caption">
            <p class='text-h2 text-white text-left'><%= link_to solution_story.title, challenge_solution_stage_solution_story_path(@challenge, solution_story.solution_stage, solution_story), style: 'color: white' %></p>
            <p class='text-white text-left'><%= solution_story.description.truncate(300) %></p>
          </div>
        </div>
      <% end %>
    </div>

    <a class="left carousel-control" href="#solution_stage-carousel" role="button" data-slide="prev">
      <span class="sr-only"><%= t('solution_stages.show.previous') %></span>
    </a>
    <a class="right carousel-control" href="#solution_stage-carousel" role="button" data-slide="next">
      <span class="sr-only"><%= t('solution_stages.show.next') %></span>
    </a>
  </div>
<% else %>
  <div id='solution_stage-overview'>
    <div class='container'>
      <div class='row'>
        <div class='col-md-10 col-md-offset-1'>

          <div class='row'>
            <div class='col-sm-9'>
              <h1 class='text-solution'><%= t('solution_stages.show.header') %></h1>
              <p class='text-large'>
                <%= t('solution_stages.show.header2') %>
                <%= link_to "Get involved in Stage #{@challenge.stage_number} >", challenge_active_stage_path(@challenge) %>
              </p>  

              <%= link_to "<i class='fa fa-twitter'></i>  ##{@challenge.hashtag.html_safe}".html_safe, "https://twitter.com/hashtag/#{@challenge.hashtag.html_safe}", target: '_blank', class: 'text-default text-large text-normal' %>
            </div>
            <div class='col-sm-3 text-center'>
              <i class='fa fa-puzzle-piece hidden-xs'></i>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>
<% end %>

<div id="solution_stage-content" ng-controller="SolutionStageCtrl">
  <div class="container">
    <div class="row">
      <div class="col-md-10 col-md-offset-1">

        <% if @challenge.stage_number == 4 %>
          <h2 class='text-center'><%= t('solution_stages.show.header3') %></h2>

          <div class='row row-count'>
            <div class='col-xs-3'>
              <ul class='action text-left text-small list-inline'>
                <!-- <li><a>Popular</a></li>
                <li><a>Latest</a></li> -->
              </ul>
            </div>
            <div class='col-xs-6'>
              <h6 class='text-center center-block'>
                <i class='fa fa-puzzle-piece fa-3x'></i><br>
                <span class='text-bolder'><%= pluralize(@solution_stories.count, "#{t('solution_stages.show.stage')}") %></span>
              </h6>
            </div>
          </div>

          <div class='row' style='margin-bottom: 50px'>
            <% @solution_stories.each do |solution_story| %>
              <%= render file: 'solution_stories/card', locals: { solution_story: solution_story } %>
            <% end %>
          </div>
        <% end %>

        <h2 class='section-title text-submit'><%= t('solution_stages.show.social_sharing_question') %></h2>
        <p class='section-description'><%= t('solution_stages.show.social_sharing_description') %></p>
        
        <%= render partial: 'layouts/share_links', locals: { url: challenge_solution_stage_url(@challenge, @solution_stage), title: @challenge.title.html_safe, description: @challenge.description.html_safe, hashtag: @challenge.hashtag } %>

      </div>
    </div>
  </div>
</div>