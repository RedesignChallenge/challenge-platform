<%= render partial: 'challenges/header', cache: true %>

<div id="solution_story-overview">
  <div class="container">
    <div class="row">
      <div class="col-md-10 col-md-offset-1">

        <%= render partial: 'solution_stories/header' %>

        <div class="well well-solution_story">

          <% if @solution_story.embed.present? %>
            <div class='solution_story-show-embed'><%= @solution_story.embed.html_safe %></div>
          <% elsif @solution_story.image.present? %>
            <%= image_tag(@solution_story.image.url, width: '100%') %>
          <% end %>

          <div class='row'>
            <div class='col-sm-10 col-sm-offset-1'>
              <div class='solution_story-content'>
                <p class="solution_story-header"><i class="fa fa-puzzle-piece fa-2x"></i><br> Story From The Field</p>

                <p class="solution_story-title"><%= @solution_story.title.html_safe %></p>
                <p class='solution_story-description'><%= @solution_story.description %></p>

                <hr class='break'>

                <p class="solution_story-header"><i class="fa fa-puzzle-piece fa-2x"></i><br> How To Guide</p>

                <%= render file: 'solutions/show', locals: { solution: @solution_story.solution } %>
              </div>
            </div>
        </div>

      </div>
    </div>
  </div>
</div>

<div id='solution_story-comments'>
  <div class='container'>
    <div class="row">
      <div class="col-md-10 col-md-offset-1">

        <%= render partial: 'comments/discussion', locals: { commentable: @solution_story.solution } %>

      </div>
    </div>
  </div>
</div>