<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= f.hidden_field :remember_me, value: true %>

  <div class='row row-fields'>
    <div id='email' class='col-sm-8 col-sm-offset-2'>
      <div class='form-group'>
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, class: 'form-control input-lg' %>
      </div>

      <div class='form-group'>
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "off", class: 'form-control input-lg' %>
        <p class='auth-helper'><%= link_to "Forgot your password?", new_user_password_path %></p>
      </div>
    </div>
  </div>

  <div class='row row-actions'>
    <div class='col-sm-4'>
      <p class='auth-switch'>Don't have an account? <%= switch_link %></p>
    </div>
    <div class='col-sm-2'>
      <%= link_to 'Cancel', cancel_path, class: 'btn btn-default btn-block btn-rounded' %>
    </div>
    <div class='col-sm-2'>
      <%= f.submit "Sign In", class: 'btn btn-info btn-block btn-rounded' %>
    </div>
  </div>

<% end %>