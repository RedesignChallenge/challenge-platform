<div class='auth-screen'>
  <div class='container'>
    <div class='row'>
      <div class='col-sm-10 col-sm-offset-1'>

        <div class='well well-auth'>
          <h2 class='section-title'>Reset Your Password</h2>

          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

            <div class='row row-errors'>
              <div class='col-sm-8 col-sm-offset-2'>
                <%= devise_error_messages! %>
              </div>
            </div>

            <div class='row row-fields'>
              <div id='email' class='col-sm-8 col-sm-offset-2'>
                <div class='form-group'>
                  <%= f.label :email %>
                  <%= f.email_field :email, autofocus: true, placeholder: 'Please enter your email address', class: 'form-control input-lg' %>
                </div>
              </div>
            </div>

            <div class='row row-actions'>
              <div class='col-sm-4'>
                <p class='auth-switch'>Don't have an account? <%= link_to "Sign Up", new_user_registration_path %></p>
              </div>
              <div class='col-sm-2'>
                <%= link_to 'Cancel', new_user_session_path, class: 'btn btn-default btn-block btn-rounded' %>
              </div>
              <div class='col-sm-2'>
                <%= f.submit "Reset", class: 'btn btn-info btn-block btn-rounded' %>
              </div>
            </div>
          <% end %>
        </div>

      </div>  
    </div>
  </div>
</div>