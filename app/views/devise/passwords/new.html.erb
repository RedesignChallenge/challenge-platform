<div class="auth-screen">
  <div class="container">
    <div class="row">
      <div class="col-sm-10 col-sm-offset-1">
        <div class="well well-auth">
          <h2 class="section-title"><%= t('.title') %></h2>

          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

            <div class="row row-errors">
              <div class="col-sm-8 col-sm-offset-2">
                <%= devise_error_messages! %>
              </div>
            </div>

            <div class="row row-fields">
              <div id="email" class="col-sm-8 col-sm-offset-2">
                <div class="form-group">
                  <%= f.label t('.email_label') %>
                  <%= f.email_field :email, autofocus: true, placeholder: t('.email_placeholder'), class: 'form-control input-lg' %>
                </div>
              </div>
            </div>

            <div class="row row-actions">
              <div class="col-sm-4">
                <p class="auth-switch"><%= t('.no_account_html', sign_up_link: link_to(t('.sign_up'), new_user_registration_path)) %></p>
              </div>
              <div class="col-sm-2">
                <%= link_to t('.cancel'), new_user_session_path, class: 'btn btn-default btn-block btn-rounded' %>
              </div>
              <div class="col-sm-2">
                <%= f.submit t('.submit'), class: 'btn btn-info btn-block btn-rounded' %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>