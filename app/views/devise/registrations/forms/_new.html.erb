<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.hidden_field :remember_me, value: true %>
  <%= f.hidden_field :referrer_id, value: session[:referrer_id] %>

  <div class='row row-errors'>
    <div class='col-sm-8 col-sm-offset-2'>
      <%= devise_error_messages! %>
    </div>
  </div>

  <div class='row row-fields'>
    <div id='email' class='col-sm-8 col-sm-offset-2'>
      <div class='form-group'>
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, placeholder: 'Please enter your email address', class: 'form-control input-lg' %>
      </div>

      <div class='form-group'>
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "off", placeholder: 'Please choose a password', class: 'form-control input-lg' %>
      </div>

      <div class='row'>
        <div class='col-xs-6 form-group'>
          <%= f.label :first_name %>
          <%= f.text_field :first_name, class: 'form-control input-lg' %>
        </div>
        <div class='col-xs-6 form-group'>
          <%= f.label :last_name %>
          <%= f.text_field :last_name, class: 'form-control input-lg' %>
        </div>
      </div>

      <div class='form-group'>
        <%= f.label :role, "Which option best describes your role?" %>
        <%= f.select :role, options_for_select(User::ROLES, (resource.role if resource.role)), { prompt: "Select One" }, class: 'form-control input-lg' %>
      </div>
    </div>

    <!-- <div id='or' class='col-sm-2'>
      <span class="fa-stack fa-lg">
        <i class="fa fa-circle fa-stack-2x"></i>
        <i class="fa fa-stack-1x fa-inverse">or</i>
      </span>
    </div>

    <div id='oauth' class='col-sm-5'>
      <div class='form-group'>
        <label>Oauth</label>
        <div class="btn btn-block btn-social btn-lg btn-info"><i class="fa fa-t2t">T2T</i> Sign in with Teacher 2 Teacher</div>
      </div>
      <div class='form-group'>
        <div class="btn btn-block btn-social btn-lg btn-twitter"><i class="fa fa-twitter"></i> Sign in with Twitter</div>
      </div>
    </div> -->
  </div>

  <div class='row row-disclaimer'>
    <div class='col-sm-8 col-sm-offset-2'>
      <div class='auth-disclaimer text-small'>By signing up, you are agreeing to our <%= link_to 'Terms and Conditions', terms_path, target: '_blank' %> and <%= link_to 'Privacy Policy', privacy_path, target: '_blank' %>.</div>
    </div>
  </div>

  <div class='row row-actions'>
    <div class='col-sm-4'>
      <p class='auth-switch'>Already have an account? <%= switch_link %></p>
    </div>
    <div class='col-sm-2'>
      <%= link_to 'Cancel', cancel_path, class: 'btn btn-default btn-block btn-rounded' %>
    </div>
    <div class='col-sm-2'>
      <%= f.submit "Sign Up", class: 'btn btn-info btn-block btn-rounded' %>
    </div>
  </div>

<% end %>