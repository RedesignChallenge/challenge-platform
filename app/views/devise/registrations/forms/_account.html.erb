<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.hidden_field :setting, value: params[:setting] %>
    <%= devise_error_messages! %>

    <div class='row'>
      <div class='col-xs-6 form-group'>
        <%= f.label :first_name %>
        <%= f.text_field :first_name, class: 'form-control' %>
      </div>
      <div class='col-xs-6 form-group'>
        <%= f.label :last_name %>
        <%= f.text_field :last_name, class: 'form-control' %>
      </div>
    </div>

    <div class='form-group'>
      <%= f.label :email, t('devise.registrations.forms._account.email_address') %>
      <div class="input-group">
        <span class="input-group-addon"><i class='fa fa-envelope-o'></i></span>
        <%= f.email_field :email, class: 'form-control' %>
      </div>
    </div>

    <hr>

    <div class='form-group'>
      <%= f.label :current_password, t('devise.registrations.forms._account.current_password_html') %>
      <div class="input-group">
        <span class="input-group-addon"><i class='fa fa-key'></i></span>
        <%= f.password_field :current_password, autocomplete: 'off', class: 'form-control' %>
      </div>
    </div>

    <div class='form-group'>
      <%= f.label :password, t('devise.registrations.forms._account.current_password_html') %>
      <div class="input-group">
        <span class="input-group-addon"><i class='fa fa-key'></i></span>
        <%= f.password_field :password, autocomplete: 'off', class: 'form-control' %>
      </div>
    </div>

    <div class='form-group'>
      <%= f.label :password_confirmation, t('devise.registrations.forms._account.confirm_password_html') %>
      <div class="input-group">
        <span class="input-group-addon"><i class='fa fa-key'></i></span>
        <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control' %>
      </div>
    </div>

    <hr>

    <%= label_tag t('devise.registrations.forms._account.receive_email_notifications') %>

    <div class='form-group'>
      <div class='row'>
        <div class='col-xs-9'>
          <span><%= t('devise.registrations.forms._account.comment_on_step') %></span> &nbsp;
        </div>
        <div class='col-xs-3 text-right'>
          <%= f.check_box :comment_posted,
                          checked: resource.comment_posted.true?,
                          class: 'radio-switch',
                          data: { 'radio-all-off' => true,
                                  size: 'mini',
                                  'on-color' => 'info',
                                  'on-text' => t('devise.registrations.forms._account.yes_option'),
                                  'off-text' => t('devise.registrations.forms._account.no_option') } %>
        </div>
      </div>
    </div>

    <div class='form-group' style='margin-bottom: 20px'>
      <div class='row'>
        <div class='col-xs-9'>
          <span><%= t('devise.registrations.forms._account.reply_on_comment') %></span> &nbsp;
        </div>
        <div class='col-xs-3 text-right'>
          <%= f.check_box :comment_replied,
                          checked: resource.comment_replied.true?,
                          class: 'radio-switch',
                          data: { 'radio-all-off' => true,
                                  size: 'mini',
                                  'on-color' => 'info',
                                  'on-text' => t('devise.registrations.forms._account.yes_option'),
                                  'off-text' => t('devise.registrations.forms._account.no_option') } %>
        </div>
      </div>
    </div>

    <div class='form-group' style='margin-bottom: 20px'>
      <div class='row'>
        <div class='col-xs-9'>
          <span><%= t('devise.registrations.forms._account.adds_comment')%></span> &nbsp;
        </div>
        <div class='col-xs-3 text-right'>
          <%= f.check_box :comment_followed,
                          checked: resource.comment_followed.true?,
                          class: 'radio-switch',
                          data: { 'radio-all-off' => true,
                                  size: 'mini',
                                  'on-color' => 'info',
                                  'on-text' => t('devise.registrations.forms._account.yes_option'),
                                  'off-text' => t('devise.registrations.forms._account.no_option') } %>
        </div>
      </div>
    </div>

    <div class='text-center center-block'><%= f.submit t('devise.registrations.forms._account.submit'), class: 'btn btn-info btn-rounded btn-longer' %></div>
<% end %>