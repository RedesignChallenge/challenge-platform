<div class='row'>
  <div class='col-sm-10 col-sm-offset-1'>

    <div class='comment-block'>
      <p class='comment-header'>Comment on the <%= @comment.commentable.class.to_s %></p>

      <p class='comment-title'><%= link_to (@comment.commentable.title || @comment.commentable.description.truncate(30)), after_update_object_path_for(@comment.commentable), class: "text-#{@comment.commentable.class.to_s.downcase}" %></p>
      
      <div class='center-block text-center' style='margin-bottom: 30px'>
        <%= link_to "<i class='fa fa-arrow-left fa-2x' style='color:#969696'></i>".html_safe, after_update_object_path_for(@comment.commentable) %>
      </div>
    </div>

  </div>
</div>