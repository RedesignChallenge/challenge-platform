<div class='row'>
  <div class='col-sm-10 col-sm-offset-1'>

    <div class='content-block'>
      <h6 class='text-center'><%= t('approaches.modals._header.title') %></h6>
      <h2 class='section-title text-approach'><%= link_to @approach.approach_idea.title, challenge_approach_stage_path(@challenge, @approach.approach_stage, anchor: "approach_idea-#{@approach.approach_idea.id}") %></h2>
      
      <div class='row'>
        <div class='col-md-8 col-md-offset-2'>
          <p><%= @approach.approach_idea.description.html_safe %></p>
        </div>
      </div>
    </div>

    <% if @approach.featured? %>
      <div class="row">
        <div class="col-sm-10 col-md-offset-1">

          <div class='well-featured-approach'>
            <div class='row'>
              <div class='col-sm-10 col-sm-offset-1'>
                <h6 class='text-white'><%= t('approaches.modals._header.featured') %></h6>
                <p class='text-small'><%= @approach.feature.reason %></p>
              </div>
            </div>
          </div>

        </div>
      </div>
    <% end %>
  </div>
</div>