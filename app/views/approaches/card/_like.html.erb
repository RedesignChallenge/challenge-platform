<% if user_signed_in? && current_user.liked?(approach, {vote_scope: approach.default_like[:scope]}) %>
  <%= link_to unlike_challenge_approach_stage_approach_idea_approach_path(@challenge, approach.approach_stage, approach.approach_idea, approach, partial: "card/like"), class: 'list-link', method: :put, remote: true do %>
    <i class='<%= approach.default_like[:liked][:icon] %>'></i> 
    <%= "#{approach.cached_votes_up}" unless approach.cached_votes_up.zero? %>
  <% end %>
<% else %>
  <%= link_to like_challenge_approach_stage_approach_idea_approach_path(@challenge, approach.approach_stage, approach.approach_idea, approach, partial: "card/like"), class: 'list-link', method: :put, remote: user_signed_in? do %>
    <i class='<%= approach.default_like[:unliked][:icon] %>'></i> 
    <%= "#{approach.cached_votes_up}" unless approach.cached_votes_up.zero? %>
  <% end %>
<% end %>