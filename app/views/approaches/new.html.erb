<%= render partial: 'challenges/header', cache: true %>

<div id='approach-form'>
  <div class='container'>

    <%= link_to "<i class='fa fa-close fa-2x'></i>".html_safe, challenge_approach_stage_path(@challenge, @approach.approach_stage), data: { confirm: "#{t('approaches.modals.new.confirm')}" } %>
    <div class='clearfix'></div>

    <%= render partial: 'approaches/header' %>

    <div class='row'>
      <div class='col-xs-10 col-xs-offset-1'>

        <div class="panel panel-approach">
          <div class="panel-heading">
            <p class="panel-title"><%= t('approaches.modals.new.title') %></p>
          </div>
          <div class="panel-body">
            <%= render partial: 'approaches/form', locals: { url: challenge_approach_stage_approach_idea_approaches_path, cancel_path: challenge_approach_stage_path(@challenge, @approach.approach_stage), submit_text: "#{t('approaches.modals.new.submit')}"} %>
          </div>
        </div>

      </div>
    </div>

  

  </div>
</div>