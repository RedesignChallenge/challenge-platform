<%= render partial: 'challenges/header', cache: true %>

<div id='approach-form'>
  <div class='container'>

    <%= link_to "<i class='fa fa-close fa-2x'></i>".html_safe, challenge_approach_stage_approach_idea_approach_path(@challenge, @approach.approach_stage, @approach.approach_idea, @approach), data: { confirm: "Are you sure you want to cancel? Any unsaved work will be lost." } %>
    <div class='clearfix'></div>

    <%= render partial: 'approaches/header' %>

    <div class='row'>
      <div class='col-xs-10 col-xs-offset-1'>

        <div class="panel panel-approach">
          <div class="panel-heading">
            <p class="panel-title">Edit Approach</p>
          </div>
          <div class="panel-body">
            <%= render partial: 'approaches/form', locals: { url: challenge_approach_stage_approach_idea_approach_path, cancel_path: challenge_approach_stage_approach_idea_approach_path(@challenge, @approach.approach_stage, @approach.approach_idea, @approach), submit_text: 'Update Approach' } %>
          </div>
        </div>

      </div>
    </div>

  </div>
</div>