<%= form_for(@suggestion, url: url) do |f| %>
  <%= render partial: 'layouts/error_messages', locals: { model: @suggestion } %>
  <div class="form-group">
    <%= f.text_field :title, placeholder: t('suggestions._form.title'), class: 'form-control input-lg' %>
  </div>

  <div class="form-group">
    <%= f.text_area :description, placeholder: t('suggestions._form.description', platform: t('project_name')), class: 'form-control', rows: 4 %>
  </div>

  <div class="row">
    <div class="col-sm-8">
      <div class="input-switch" ng-switch="suggestion_link" ng-init="suggestion=<%= @suggestion.link.present? %>">
        <div ng-hide="suggestion_link" ng-click="suggestion_link=true" class="media">
          <div class="media-left">
            <span class="fa-stack">
              <i class="fa fa-stack-2x fa-circle-thin"></i>
              <i class="fa fa-stack-1x fa-plus"></i>
            </span>
          </div>
          <div class="media-body">
            <span class="help-text"><%= t('suggestions._form.add_link') %></span>
          </div>
        </div>

        <div ng-show="suggestion_link" class="form-group">
          <%= f.text_field :link, placeholder: t('suggestions._form.add_url'), class: 'form-control' %>
          <span class="help-block"><%= t('suggestions._form.share_link') %></span>
        </div>
      </div>
    </div>

    <div class="col-sm-2 col-xs-6">
      <%= link_to t('suggestions._form.cancel'), cancel_path, class: 'btn btn-rounded btn-sm btn-block btn-default' %>
    </div>

    <div class="col-sm-2 col-xs-6">
      <%= f.submit submit_text, class: 'btn btn-rounded btn-sm btn-block btn-info' %>
    </div>
  </div>
<% end %>