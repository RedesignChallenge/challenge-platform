<div id='suggestion-form'>
  <div class='container'>

    <%= link_to "<i class='fa fa-close fa-2x'></i>".html_safe, root_path %>
    <div class='clearfix'></div>

    <div class='row'>
      <div class='col-sm-10 col-sm-offset-1'>

        <div class='suggestion-block'>
          <p class='suggestion-header'>Suggestion</p>
          <p class='suggestion-title'>Edit Suggestion</p>
          <div class='row'>
            <div class='col-md-8 col-md-offset-2'>
                <div class='center-block text-center' style='margin-bottom: 30px'>
                  <%= link_to "<i class='fa fa-arrow-left fa-2x' style='color:#969696'></i>".html_safe, root_path %>
                </div>
            </div>
          </div>
        </div>
        
        <div class="well well-lg well-suggestion"> 
          <%= render partial: 'suggestions/form', locals: { url: suggestion_path, cancel_path: root_path, submit_text: "Update Suggestion" } %>
        </div>

      </div>
    </div>

  </div>
</div>