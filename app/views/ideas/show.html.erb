<%= render partial: 'challenges/header', cache: true %>

<div id='idea-overview'>
  <div class='container'>
    <div class='row'>
      <div class='col-md-10 col-md-offset-1'>

        <%= render partial: 'ideas/header' %>

        <div class='well well-idea'>
          <span class="label label-idea pull-left"><i class='fa fa-lightbulb-o'></i> Idea</span>
          <div class='clearfix'></div>

          <div class='idea-content'>
            <div class='row row-idea'>
              <div class="col-sm-4">

                <div class="media media-author">
                  <div class="media-left">
                    <% if @idea.user.avatar.present? %>
                      <%= image_tag(@idea.user.avatar.profile.url, class: 'img-circle', style: 'width:5.5em') %>
                    <% else %>
                      <% if user_signed_in? && current_user == @idea.user %>
                        <span class="fa-stack fa-lg new-user-avatar">
                          <i class="fa fa-circle fa-stack-2x"></i>
                          <i class="fa fa-inverse fa-stack-1x">you</i>
                        </span>
                      <% else %>
                        <span class="fa-stack fa-lg new-user-avatar">
                          <i class="fa fa-circle fa-stack-2x" style='color:<%= @idea.user.color %>'></i>
                          <i class="fa fa-inverse fa-stack-1x"><%= @idea.user.initials %></i>
                        </span>
                      <% end %>
                    <% end %>
                  </div>
                  <div class="media-body">
                    <p class='name'><%= @idea.user.display_name %></p>
                    <p class='title'><%= @idea.user.display_organization %></p>
                  </div>
                </div>

                <div class='row'>
                  <div class='col-xs-7'>

                    <% if user_signed_in? && @idea.user == current_user %>
                      <div class="btn-group btn-block" role="group" style='margin-bottom:10px'>
                        <%= link_to "<i class='fa fa-edit'></i> Edit".html_safe, edit_challenge_idea_stage_problem_statement_idea_path(@challenge, @idea.idea_stage, @idea.problem_statement, @idea), class: 'btn btn-sm btn-rounded btn-warning', style: 'width:50%' %>
                        <%= link_to "<i class='fa fa-trash'></i> Delete".html_safe, challenge_idea_stage_problem_statement_idea_path(@challenge, @idea.idea_stage, @idea.problem_statement, @idea), method: :delete, data: { confirm: "Are you sure you want to delete your idea?" } , class: 'btn btn-sm btn-rounded btn-danger', style: 'width:50%' %>
                      </div>
                    <% end %>
                    
                    <div id='idea-<%= @idea.id %>-like'>
                      <%= render partial: 'ideas/like' %>
                    </div>

                    <div id='idea-<%= @idea.id %>-share'>
                      <%= render partial: 'layouts/share_button', locals: { url: challenge_idea_stage_problem_statement_idea_url(@challenge, @idea.idea_stage, @idea.problem_statement, @idea), title: @idea.title.html_safe, description: @idea.description.html_safe, hashtag: @challenge.hashtag } %>
                    </div>

                    <%= link_to new_challenge_idea_stage_problem_statement_idea_path(@challenge, @idea.idea_stage, @idea.problem_statement, refinement_parent_id: @idea.id), class: 'btn btn-block btn-sm btn-rounded btn-info', data: { toggle: 'popover', trigger: 'hover', placement: 'bottom', container: '#idea-overview', html: 'true', title: "<b class='text-center'>Inspired to make this idea better?</b>", content: "Create a refined version. Refinements are treated as separate ideas, but refer back to the original with a linked reference."}, id: 'refinement-link' do %>
                      <i class="fa fa-pencil"></i> <span>Refine</span>
                    <% end %>
                    <script>$(function(){$("#refinement-link").popover('show');});</script>

                  </div>
                </div>
              </div>

              <div class='col-sm-8'>
                <p class='idea-show-title'><%= @idea.title.html_safe %></p>
                
                <% if @idea.embed.present? %>
                  <div class='idea-show-embed'><%= @idea.embed.html_safe %></div>
                <% end %>
                
                <p class='idea-show-description'><%= @idea.description.html_safe %></p>

                <% if @idea.impact.present? %>
                  <p class='idea-show-heading'>Potential Impact</p>
                  <p class='idea-show-description'><%= @idea.impact.html_safe %></p>
                <% end %>

                <% if @idea.implementation.present? %>
                  <p class='idea-show-heading'>Possible Implementation</label>
                  <p class='idea-show-description'><%= @idea.implementation.html_safe %></p>
                <% end %>

                <% if @idea.link.present? && @idea.embed.blank? %>
                  <p class='idea-show-heading'>Link</p>
                  <p class='idea-show-description'><%= link_to @idea.link.html_safe, @idea.link, target: '_blank' %></p>
                <% end %>
              </div>
            </div>

            <div class="row row-refinements">
              <div class='col-sm-4'>
                <% if @idea.refinement_parent.present? %>
                  <p class='refinement-header'>Based On</p>

                  <div class="media media-refinement">
                    <div class="media-left">
                      <% if @idea.refinement_parent.user.avatar.present? %>
                        <%= image_tag(@idea.refinement_parent.user.avatar.profile.url, class: 'img-circle', style: 'width:2em') %>
                      <% else %>
                        <% if user_signed_in? && current_user == @idea.refinement_parent.user %>
                          <span class="fa-stack fa-lg new-user-avatar">
                            <i class="fa fa-circle fa-stack-2x"></i>
                            <i class="fa fa-inverse fa-stack-1x">you</i>
                          </span>
                        <% else %>
                          <span class="fa-stack fa-lg new-user-avatar">
                            <i class="fa fa-circle fa-stack-2x" style='color:<%= @idea.refinement_parent.user.color %>'></i>
                            <i class="fa fa-inverse fa-stack-1x"><%= @idea.refinement_parent.user.initials %></i>
                          </span>
                        <% end %>
                      <% end %>
                    </div>
                    <div class="media-body">
                      <%= link_to @idea.refinement_parent.title, challenge_idea_stage_problem_statement_idea_path(@challenge, @idea_stage, @idea.refinement_parent.problem_statement, @idea.refinement_parent) %>
                    </div>
                  </div>
                <% end %>
              </div>
              <div class="col-sm-8">
                <% if @idea.refinements.present? %>
                  <p class='refinement-header'><%= pluralize(@idea.refinements.count, 'Refinement') %></p>

                  <div class='row'>
                    <% @idea.refinements.each do |refinement| %>
                      <%= render partial: 'ideas/card/show', locals: { idea: refinement, columns: 'col-sm-6' } %>
                    <% end %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>

<div id='idea-comments'>
  <div class='container'>
    <div class="row">
      <div class="col-md-10 col-md-offset-1">

        <%= render partial: 'comments/discussion', locals: { commentable: @idea } %>

      </div>
    </div>
  </div>
</div>

<div id='idea-share'>
  <div class='container'>
    <div class='row'>
      <div class='col-md-10 col-md-offset-1'>

        <p class="section-title-share">Know people who have something to add to this conversation?</p>

        <div class="row">
          <div class='col-sm-10 col-sm-offset-1'>
            <p class='section-description'>More people means more problems solved. Share this challenge!</p>
          </div>
        </div>

        <%= render partial: 'layouts/share_links', locals: { url: challenge_idea_stage_problem_statement_idea_url(@challenge, @idea.idea_stage, @idea.problem_statement, @idea), title: @idea.title.html_safe, description: @idea.description.html_safe, hashtag: @challenge.hashtag } %>
        
      </div>
    </div>
  </div>
</div>