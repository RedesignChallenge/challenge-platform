<div class="row row-discussion-count">
  <div class="col-xs-6 col-xs-offset-3">
    <div class="discussion-header">
      <span class="text-xsmall"><%= experience.comments_count.zero? ? t('experiences.card._discussion.leave_a_comment') : t('experiences.card._discussion.discussion') %></span>
    </div>
  </div>
</div>

<% experience.root_comments.last(2).each do |comment| %>
  <%= render file: 'comments/card', locals: { comment: comment } %>
<% end %>

<%= render partial: 'comments/card/new', locals: { comment: Comment.new(commentable_type: experience.class.to_s, commentable_id: experience.id) } %>

<% unless experience.comments_count.zero? || (controller_name == 'experiences' && action_name == 'show') %>
  <hr class="break">
  <p class="text-center"><%= link_to t('experiences.card._discussion.count', pluralized_comment_count: pluralize(experience.comments_count, t('experiences.card._discussion.comment'))), challenge_experience_stage_theme_experience_path(@challenge, experience.experience_stage, experience.theme, experience, anchor: 'experience-comments'), class: 'text-bold text-center' %></p>
<% end %>