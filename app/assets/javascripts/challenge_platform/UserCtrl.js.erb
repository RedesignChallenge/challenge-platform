(function () {
  'use strict';

  angular
    .module('ChallengePlatform')
    .controller('UserCtrl', UserCtrl);

  UserCtrl.$inject = [
    '$scope'
  ];

  function UserCtrl($scope) {

    $scope.toggleState = function (isVisible) {
      if (isVisible) {
        $('.select2-container').hide();
      } else {
        $('.select2-container').show();
      }
    };

    $scope.otherLEA = function (arg) {
      $scope.other_lea = arg;
      $scope.other_placeholder = '<%= I18n.t('devise.registrations.forms._profile.placeholder_lea') %>';
      $scope.toggleState(arg);
    };

    $scope.otherSchool = function (arg) {
      $scope.other_school = arg;
      $scope.other_placeholder = '<%= I18n.t('devise.registrations.forms._profile.placeholder_school') %>';
      $scope.toggleState(arg);
    };
  }
})();